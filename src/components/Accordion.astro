---
import "../styles/components/accordion.scss";

const { id, forLabel, question, answer } = Astro.props;

interface Props {
  id: string;
  forLabel: string;
  question: string;
  answer: string;
}
---

<!-- id="chck2" -->
<div class="tab">
  <input type="checkbox" id={id} />
  <label class="tab-label" for={forLabel}><h3>{question}</h3></label>
  <div class="tab-content"><Fragment set:html={answer}/></div>
</div>
